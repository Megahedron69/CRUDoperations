<%-include("./partials/head")%> <%-include("./partials/navbar")%>
<div class="page">
  <div class="imagecontainer img-fluid">
    <img src="<%=fproduct.prodimage%>" alt="" />
  </div>
  <div class="detailcard">
    <div class="category">
      <img src="<%=fproduct.logo%>" alt="" />
      <span><%=fproduct.category%></span>
    </div>
    <div class="basicdetails">
      <h2><%=fproduct.name%></h2>
      <span>&dollar;<%=fproduct.price%></span>
      <span>Best before <%=fproduct.shelflife%> days</span>
      <span>Package Size: <%=fproduct.qty%> <%=fproduct.unit%></span>
      <button class="btn-full"><a href="#" class="link">Buy Now</a></button>
    </div>
    <div class="deliveryadd">
      <span>To be delivered to</span>
      <div><%=fproduct.address.street%>,</div>
      <div><%=fproduct.address.state%>,</div>
      <div><%=fproduct.address.country%></div>
      <span style="color: rgb(17, 248, 9)">by <%=fproduct.delivery%></span>
    </div>
  </div>
  <div class="butties d-grid gap-2">
    <button type="button" class="btn btn-primary btn-warning btn-lg">
      <a href="http://localhost:8080/products/<%=fproduct._id%>/editprod"
        >Edit Product Details</a
      >
    </button>
    <form action="/products/<%=fproduct._id%>?_method=DELETE" method="POST">
      <button class="btn btn-secondary btn-danger btn-lg">
        Delete product
      </button>
    </form>
  </div>
</div>
<style>
  body {
    background-color: rgb(252, 74, 74);
    box-sizing: border-box;
  }
  .page {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
  }
  .butties a,
  .butties a:visited,
  .butties a:active,
  .butties a:hover {
    all: unset;
  }
  .butties button {
    display: flex;
    flex-direction: row;
    width: 100%;
    flex-wrap: nowrap;
    border-radius: 21px;
    border: 3px solid black;
    margin: 15px;
    cursor: pointer;
    transition: all 100ms;
    justify-content: center;
    align-items: center;
  }
  .butties button:hover {
    scale: 1.1;
    box-shadow: 2px 2px black;
    border: 3px solid black;
  }
  .imagecontainer {
    margin-top: 5%;
    margin: 4%;
    padding: 4%;
    border: 5px solid black;
    border-radius: 9px;
    box-shadow: 5px 5px 2px black;
    background: white;
  }
  .imagecontainer img {
    height: 500px;
    width: 500px;
    align-items: center;
    cursor: zoom-in;
    transition: all 100ms;
  }

  .detailcard {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: whitesmoke;
    border: 2px solid black;
    border-radius: 11px;
    margin: 4%;
    box-shadow: 4px 11px 5px black;
    padding: 3%;
  }
  .detailcard img {
    height: 50px;
    width: 50px;
    border-radius: 32px;
    background-color: white;
    padding: 5%;
  }
  .category {
    position: relative;
    top: 0;
    left: -265px;
    background-color: rgb(217, 72, 247);
    color: white;
    font-weight: 700;
    border-radius: 32px;
    padding: 0.7%;
    border-top-left-radius: 11px;
    border-bottom-left-radius: 11px;
    box-shadow: 4px 11px 5px black;
  }
  .basicdetails {
    margin-top: 6.5%;
    flex-direction: column;
    flex-wrap: nowrap;
    display: flex;
    align-items: flex-start;
    justify-content: left;
    padding: 3.8%;
    margin-left: -29.8%;
    border-bottom: 1px solid black;
  }
  .basicdetails h2 {
    font-size: 3.3em;
    font-weight: 700;
    margin-top: -1.17%;
  }
  .basicdetails span {
    font-weight: 400;
    font-size: 1.1em;
    margin-bottom: 1.05%;
  }
  .basicdetails :nth-child(2) {
    font-size: 1.89em;
    font-weight: 500;
    margin-top: 3%;
    margin-bottom: 4%;
  }
  .basicdetails :nth-child(3) {
    color: red;
  }
  .basicdetails a {
    text-decoration: none;
    color: white;
    font-weight: 500;
    font-size: 1.5em;
  }
  .basicdetails button {
    background-color: rgb(252, 74, 74);
    border-radius: 21px;
    padding: 1.1%;
    margin-top: 4%;
    margin-bottom: 4%;
    cursor: pointer;
    transition: all 100ms;
    border: 3px solid black;
  }
  .basicdetails button:hover {
    scale: 1.1;
    box-shadow: 2px 2px black;
    border: 3px solid black;
  }
  .deliveryadd {
    position: relative;
    font-size: 1.1em;
    font-weight: 400;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    margin-top: 2%;
  }
  .deliveryadd::before {
    content: "";
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 6px;
    bottom: 0;
    left: 0;
    overflow: hidden;
    background-color: rgb(252, 74, 74);
    transform-origin: bottom right;
    transition: transform 1s ease-out;
  }
</style>
